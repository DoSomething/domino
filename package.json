{
    "private": true,
    "scripts": {
        "start": "npm run clean && npm run modernizr && webpack",
        "build": "npm run clean && npm run modernizr && NODE_ENV=production webpack",
        "build:dev": "npm run clean && npm run modernizr && NODE_ENV=development webpack",
        "clean": "rm -rf ./dist",
        "modernizr": "modernizr -c node_modules/@dosomething/forge/modernizr.json -d dist/modernizr.js"
    },
    "babel": {
        "presets": [
            "es2015"
        ]
    },
    "dependencies": {
        "@dosomething/forge": "^6.7.4"
    },
    "devDependencies": {
        "@dosomething/webpack-config": "^1.1.1",
        "babel-preset-es2015": "^6.9.0",
        "modernizr": "^3.3.1",
        "webpack": "^1.13.1",
        "webpack-dev-server": "^1.14.1"
    }
}